/* pages/contentDetails/contentDetails.wxss */

.contentDetails {
  width: 100%;
  height: 100%;
  background: #fff;
  border-radius: 6rpx;
  padding: 0rpx 30rpx 0 30rpx;
  box-sizing: border-box;
}

.contentDetails  .title {
  font-size: 40rpx;
  color: #000;
  text-align: justify;
  line-height: 60rpx;
  display: block;
  margin-top: 50rpx;
  margin-bottom: 40rpx;
}

.contentDetails  .title2 {
  font-size: 30rpx;
  color: #999;
  text-align: justify;
  overflow: hidden;
}

.contentDetails  .title2 .left {
  float: left;
}

.contentDetails  .title2 .right {
  float: right;
}

.contentDetails  .content_font {
  font-size: 32rpx;
  color: #666;
  text-align: justify;
  line-height: 60rpx;
}

.contentDetails  .page-head-line {
  width: 100%;
  height: 2rpx;
  background-color: #eee;
  margin: 50rpx auto;
  box-sizing: border-box;
}

.contentDetails .content_header {
  width: auto;
  height: 104rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0rpx;
  left: 20rpx;
  right: 20rpx;
  z-index: 1;
  background: linear-gradient(-180deg, #fff 0%, rgba(255, 255, 255, 0.00) 100%);
}
